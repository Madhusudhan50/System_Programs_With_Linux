build:
	gcc program1.c -o myexe

clean:
	rm myexe

run:
	./myexe ${ARGS}


																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																														
